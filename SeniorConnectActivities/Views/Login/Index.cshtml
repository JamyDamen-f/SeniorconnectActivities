@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_PlainLayout.cshtml";
}
@model SeniorConnectActivitiesShared.Models.UserModel;


<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row">
            <h2 class="text-center mb-3">SeniorConnect</h2>
        </div>
        <div class="row">
            <form method="post" asp-controller="Login" asp-action="CheckLogin" class="mt-3 p-5 col-12 col-md-6 mx-auto bg-light rounded-3 shadow">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="form-group mb-3">
                    <label for="email" class="form-label text-dark">Email</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <input type="email" asp-for="Email" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label for="password" class="form-label text-dark">Password</label>
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>

                <button type="submit" class="btn btn-dark w-100">Login</button>
                <div class="mt-3 ">
                    <a class="text-black" asp-controller="User" asp-action="Registration">Registreren</a>
                </div>
            </form>
        </div>
    </div>
</div>

