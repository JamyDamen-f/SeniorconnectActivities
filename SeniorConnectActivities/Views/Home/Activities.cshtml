@{
    ViewData["Title"] = "Activities";
}
@model List<SeniorConnectActivities.Models.Entities.UserModel>


<h1>Activities</h1>
@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}