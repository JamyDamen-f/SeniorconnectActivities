@{
    ViewData["Title"] = "Details - Activity";
}
@model SeniorConnectActivities.Models.Entities.ActivityModel

<div class="mt-5">
    <h1>Details van activiteit</h1>
</div>

@if (Model != null)
{
    <h3 class="mt-3">@Model.Title</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Locatie</th>
                <th>Start</th>
                <th>Eind</th>
                <th>Aantal personen</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Title</td>
                <td>@Model.Location</td>
                <td>@Model.Start</td>
                <td>@Model.End</td>
                <td>@Model.MaxParticipants</td>
            </tr>
        </tbody>
    </table>

    <strong>Bescrijving</strong>
    <p>@Model.Description</p>

}
else
{
    <p>Er is geen activiteit bekend.</p>
}
