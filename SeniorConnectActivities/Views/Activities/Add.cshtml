@{
    ViewData["Title"] = "Add - Activity";
}
@model SeniorConnectActivities.Models.AddActivitiesViewModel


<div class="mt-5">
    <h1>Toevoegen van activiteit</h1>
</div>

<!-- Form to add a activity -->
@using (Html.BeginForm("AddEntity", "Activities", FormMethod.Post, new { @class = "bg-dark mt-3 p-5 col-5 rounded-2" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "form-label text-light"})
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(model => model.Location, new { @class = "form-label text-light" })
        @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Location)
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(model => model.Start, new { @class = "form-label text-light" })
        @Html.TextBoxFor(model => model.Start, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
        @Html.ValidationMessageFor(model => model.Start)
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(model => model.End, new { @class = "form-label text-light" })
        @Html.TextBoxFor(model => model.End, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
        @Html.ValidationMessageFor(model => model.End)
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(model => model.MaxParticipants, new { @class = "form-label text-light" })
        @Html.TextBoxFor(model => model.MaxParticipants, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.MaxParticipants)
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(model => model.Description, new { @class = "form-label text-light" })
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <button type="submit" class="btn btn-light col-12 mt-3">Opslaan</button>
}



